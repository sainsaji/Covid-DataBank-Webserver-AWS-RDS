<html>
    <head>
        <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    </head>
    <body>
        <div class="container">
            <h1><%- title %></h1>
            <form action="/save" method="post">
                <div class = "form-group">
                    <label for="state">State Name:</label>
                    <input type="text" class="form-control" id="statename" placeholder="Enter State Name" name="statename">
                </div>
                <div class = "form-group">
                    <label for="state">Date:</label>
                    <input type="date" class="form-control" id="dateofrecord" placeholder="Enter Date" name="dateofrecord" required>
                </div>
                <div class = "form-group">
                    <label for="state">Number of Samples:</label>
                    <input type="text" class="form-control" id="numofsamp" placeholder="Enter Number" name="numofsamp">
                </div>
                <div class = "form-group">
                    <label for="state">Number of Deaths:</label>
                    <input type="text" class="form-control" id="numofdeath" placeholder="Enter Number of Deaths" name="numofdeath">
                </div>
                <div class = "form-group">
                    <label for="state">Number of Positive Samples:</label>
                    <input type="text" class="form-control" id="numofpos" placeholder="Enter Number of Positives" name="numofpos">
                </div>
                <div class = "form-group">
                    <label for="state">Number of Negetive Samples:</label>
                    <input type="text" class="form-control" id="numofneg" placeholder="Enter Number of Negetives" name="numofneg">
                </div>
                <div class = "form-group">
                    <label for="state">Number of Discharges:</label>
                    <input type="text" class="form-control" id="numofdis" placeholder="Enter Number of Discharges" name="numofdis">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            
        </div>
    </body>
</html>